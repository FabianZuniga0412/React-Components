{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/weather.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/weather",
      "destination": "/api/weather.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
